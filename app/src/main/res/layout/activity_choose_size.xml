<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/gof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-condensed"
        android:text="G.O.F"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gameoffif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-condensed"
        android:text="Game Of Fifteen"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/button_highScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="highscore"
        android:text="High Scores"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/photo"
        android:layout_gravity="center_horizontal"

        android:contentDescription="This is an image" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <Button
        android:id="@+id/button_2x2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="chooseSize"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:text="2x2" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <Button
        android:id="@+id/button_3x3"
        android:layout_width="120dp"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="chooseSize"
        android:text="3x3" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <Button
        android:id="@+id/button_4x4"
        android:layout_width="120dp"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="chooseSize"
        android:text="4x4" />

</LinearLayout>
